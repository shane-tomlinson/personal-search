extends layout


block content
  ul#main_form
    if email
      li
        form(method='post', action='/save', name='save')
          label(for='save') Index URL
          input(type='text', id='url', name='url', placeholder='http://yoururl.com')
          input(type='submit', value='Save')
        

    li
      form(method='get', action='/search', name='search')
        label(for='search') Search
        input(type='text', id='search_text', name='search_text', placeholder='Search')
        input(type='submit', value='Search')



  if search_text
    include results

  if url
    include saving

