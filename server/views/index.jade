extends layout


block content
  ul#main_form
    li
      form(method='get', action='/start', name='search')
        if email
          label(for='search') Search Term or URL
        else
          label(for='search') Search Term
        if email
          input(type='text', id='val', name='val', placeholder='<Search Term> or <http://site-to-index.com>')
        else 
          input(type='text', id='val', name='val', placeholder='<Search Term>')
        input(type='submit', value='Start')


  if url
    include saving

  if search_text
    include results

